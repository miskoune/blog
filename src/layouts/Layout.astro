---
import "../styles/global.css";

const CANONICAL_URL  = new URL(Astro.url.pathname, Astro.site).href;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={CANONICAL_URL} />
    <link rel="preload" href="/fonts/Inter.ttf" as="font" type="font/ttf" crossorigin>
		<meta name="generator" content={Astro.generator} />
		<title>Moussa Isk - Product Engineer</title>
	</head>
	<body>
    <!-- Minimal Background decorative elements -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      <!-- Single subtle gradient orb -->
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-blue-500/8 to-purple-600/8 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-tr from-pink-500/8 to-orange-400/8 rounded-full blur-3xl"></div>
    </div>
    <main class="mb-16">
      <div class="mx-4">
      <header class=" max-w-2xl lg:max-w-xl mx-auto font-inter flex justify-end my-8 md:my-16">
        <nav class="flex gap-4">
          <a href="/">home</a>
          <a href="/experience">xp</a>
          <a href="/apps">apps</a>
        </nav>
      </header>
		  <slot />
      </div>
    </main>
	</body>
</html>
