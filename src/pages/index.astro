---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Separator from '../components/Separator.astro';
import image1 from '../assets/images/image1.jpg';
import image2 from '../assets/images/image2.jpg';
import appleStoreSvg from '../assets/images/killerparty/apple-store.svg';
import personalPicture from '../assets/images/personal/picture.jpg';
---

<Layout>
    <section class="max-w-4xl mx-auto font-inter">
      <div class="flex flex-col lg:flex-row gap-8 lg:gap-12 items-center">
        <!-- Text Content -->
        <div class="flex-1 lg:space-y-6">
          <div class="text-center lg:text-left">
            <h1 class="text-3xl lg:text-4xl font-bold mb-1">Bonjour, I'm <span class="bg-gradient-to-r from-red-500 to-pink-500 bg-clip-text text-transparent">Moussa</span>.</h1>
            <p class="text-gray-500 text-lg mb-4">Product Engineer based in Paris.</p>
            <p class="text-gray-700 leading-relaxed">I'm designing and building products that help solo founders and small businesses scale and shine. âœ¨</p>
          </div>
          <!-- Button visible only on desktop -->
          <div class="hidden lg:block">
            <Button text="about me" href="/experience" />
          </div>
        </div>
        
        <!-- Photo Section -->
        <div class="flex-1 flex flex-col items-center lg:justify-end">
          <div class="relative group">
            <!-- Main Photo Container -->
            <div class="relative w-64 h-80 lg:w-72 lg:h-96 rounded-2xl overflow-hidden shadow-2xl border border-gray-200/50 transform group-hover:scale-105 transition-all duration-500">
              <img 
                src={personalPicture.src} 
                alt="Moussa Isk - Product Engineer" 
                class="w-full h-full object-cover"
              />
              <!-- Subtle gradient overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/10 via-transparent to-transparent"></div>
            </div>
            
            <!-- Decorative Elements -->
            <div class="absolute -top-4 -right-4 w-8 h-8 bg-gradient-to-br from-blue-400/30 to-purple-500/30 rounded-full blur-sm group-hover:scale-110 transition-transform duration-300"></div>
            <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-gradient-to-br from-pink-400/30 to-orange-500/30 rounded-full blur-sm group-hover:scale-110 transition-transform duration-300"></div>
            
            <!-- Floating accent -->
            <div class="absolute top-1/2 -left-6 w-3 h-3 bg-gradient-to-br from-purple-400/40 to-blue-500/40 rounded-full blur-sm animate-pulse"></div>
          </div>
          
          <!-- Button visible only on mobile, positioned under image -->
          <div class="lg:hidden mt-6">
            <Button text="about me" href="/experience" />
          </div>
        </div>
      </div>
      <Separator />
    </section>
    <section class="mt-8 lg:max-w-4xl mx-auto font-inter">
      <!-- KillerParty Project Section -->
      <div class="mb-8">
        <h2 class="text-2xl">Personal Projects</h2>
        <p class="text-gray-500 mb-4">Here are some of the projects I've worked on in my free time.</p>
      </div>
      <div class="bg-gradient-to-br from-gray-900 to-black rounded-2xl p-8 border border-gray-800/50 shadow-2xl">
        <div class="flex flex-col lg:flex-row gap-8 items-center">
          <!-- Project Info -->
          <div class="flex-1 space-y-6">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
              <span class="text-sm font-medium text-gray-400 tracking-wide uppercase">Latest Work</span>
            </div>
            
            <h2 class="text-3xl font-bold text-white mb-4">
              <span class="bg-gradient-to-r from-red-500 to-pink-500 bg-clip-text text-transparent">Killerparty</span>
              <br />
              <span class="text-gray-200 text-lg font-medium">Survival Game</span>
            </h2>
            
            <p class="text-gray-300 font-[300]">
              Immersive role-playing game platform that brings mystery and intrigue to mobile gaming. 
              Designed and developed key features focusing on intuitive UX and seamless gameplay experience.
            </p>
            
            <div class="flex flex-wrap gap-3">
              <span class="px-3 py-1 bg-gray-800 text-gray-300 text-sm rounded-full border border-gray-700">React Native</span>
              <span class="px-3 py-1 bg-gray-800 text-gray-300 text-sm rounded-full border border-gray-700">Mobile Game</span>
              <span class="px-3 py-1 bg-gray-800 text-gray-300 text-sm rounded-full border border-gray-700">Real-time Multiplayer</span>
              <span class="px-3 py-1 bg-gray-800 text-gray-300 text-sm rounded-full border border-gray-700">Survival</span>
            </div>
            
            <div class="flex items-center gap-4">
              <Button text="Website" href="https://killerparty.app" variant="secondary" newTab={true} />
              
              <!-- Apple Store Download Button -->
              <a href="https://apps.apple.com/fr/app/killerparty/id6468843961" target="_blank" class="flex items-center justify-center py-1 hover:drop-shadow-lg rounded-lg">
                <img class="h-17" src={appleStoreSvg.src} alt="Download on the App Store" class="h-20 w-auto" />  
              </a>
            </div>
          </div>
          
          <!-- Visual Element -->
          <div class="flex-1 flex justify-center">
            <div class="relative group">
              <!-- Container for both phones - Responsive -->
              <div class="flex flex-row gap-3 md:gap-4 items-center justify-center">
                <!-- Screenshot 1 - Game Lobby -->
                <div class="relative">
                  <!-- Phone Frame - Responsive sizing -->
                  <div class="w-36 md:w-56 h-[280px] md:h-[450px] bg-gray-800 rounded-3xl p-2 shadow-2xl border border-gray-700 transform group-hover:scale-105 transition-transform duration-500">
                    <!-- Real App Screenshot -->
                    <div class="w-full h-full rounded-2xl overflow-hidden relative">
                      <img 
                        src={image1.src} 
                        alt="KillerParty App - Game Lobby Screen" 
                        class="w-full h-full object-cover"
                      />
                      <!-- Subtle overlay for better integration -->
                      <div class="absolute inset-0 bg-black/10"></div>
                    </div>
                  </div>
                  
                  <!-- Floating elements -->
                  <div class="absolute -top-3 -right-3 w-6 h-6 bg-red-500/20 rounded-full blur-sm animate-pulse"></div>
                  <div class="absolute -bottom-3 -left-3 w-4 h-4 bg-pink-500/20 rounded-full blur-sm animate-pulse" style="animation-delay: 1s;"></div>
                </div>

                <!-- Screenshot 2 - Game Statistics -->
                <div class="relative">
                  <!-- Phone Frame - Responsive sizing -->
                  <div class="w-36 md:w-56 h-[280px] md:h-[450px] bg-gray-800 rounded-3xl p-2 shadow-2xl border border-gray-700 transform group-hover:scale-105 transition-transform duration-500">
                    <!-- Real App Screenshot -->
                    <div class="w-full h-full rounded-2xl overflow-hidden relative">
                      <img 
                        src={image2.src} 
                        alt="KillerParty App - Game Statistics Screen" 
                        class="w-full h-full object-cover"
                      />
                      <!-- Subtle overlay for better integration -->
                      <div class="absolute inset-0 bg-black/10"></div>
                    </div>
                  </div>
                  
                  <!-- Floating elements -->
                  <div class="absolute -top-3 -left-3 w-6 h-6 bg-purple-500/20 rounded-full blur-sm animate-pulse"></div>
                  <div class="absolute -bottom-3 -right-3 w-4 h-4 bg-blue-500/20 rounded-full blur-sm animate-pulse" style="animation-delay: 0.5s;"></div>
                </div>
              </div>
              
              <!-- Central floating elements - Desktop only -->
              <div class="hidden md:block absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                <div class="w-8 h-8 bg-gradient-to-r from-red-500/30 to-purple-500/30 rounded-full blur-sm animate-pulse"></div>
              </div>
              
        
            </div>
          </div>
        </div>
      </div>
    </section>
</Layout>
