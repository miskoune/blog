---
import Layout from '../layouts/Layout.astro';
import Separator from '../components/Separator.astro';
import personalPicture from '../assets/images/personal/picture.jpg';
---

<Layout>
    <div class="max-w-6xl mx-auto px-4">

      <!-- Page Title -->
      <div class="text-center">
        <h1 class="text-xl text-gray-600 max-w-2xl mx-auto">
          My professional journey in product engineering and digital innovation
        </h1>
      </div>

      <Separator />

      <!-- Professional Experience Section -->
      <section class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Experience</h2>
          <p class="text-gray-600">Building products that matter, one experience at a time</p>
        </div>

        <!-- Experience Cards -->
        <div class="relative max-w-4xl mx-auto">
          
          <!-- Timeline Items -->
          <div class="space-y-32">
            
            <!-- Decathlon Digital Experience (Most Recent) -->
            <div class="relative mb-16">
              <!-- Content Card -->
              <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border border-gray-200/50 shadow-lg hover:shadow-xl transition-all duration-300">
                <div class="flex flex-col lg:flex-row gap-8 items-start">
                  <!-- Company Info -->
                  <div class="flex-1">
                    <div class="flex items-center gap-4 mb-4">
                      <img src="/src/assets/icons/decathlon.jpeg" alt="Decathlon" class="w-12 h-12 rounded-full object-cover" />
                      <div>
                        <h3 class="text-2xl font-bold text-gray-900">Senior Frontend Engineer</h3>
                        <p class="text-lg text-gray-600">Decathlon Digital</p>
                      </div>
                    </div>

                  <div class="space-y-4">
                    <p class="text-gray-700 leading-relaxed">
                      Front-end technical lead for the Platform team in charge of Repair domain applications and Security Champion for integrating good security practices.
                    </p>

                    <div class="flex flex-wrap gap-3">
                      <span class="px-4 py-2 bg-green-100 text-green-700 text-base font-medium rounded-full flex items-center gap-2 shadow-sm">
                        <img src="/src/assets/icons/typescript.svg" alt="TypeScript" class="w-5 h-5" />
                        TypeScript
                      </span>
                      <span class="px-4 py-2 bg-green-100 text-green-700 text-base font-medium rounded-full flex items-center gap-2 shadow-sm">
                        <img src="/src/assets/icons/react.svg" alt="React" class="w-5 h-5" />
                        React
                      </span>
                      <span class="px-4 py-2 bg-green-100 text-green-700 text-base font-medium rounded-full flex items-center gap-2 shadow-sm">
                        <img src="/src/assets/icons/css.svg" alt="CSS Modules" class="w-5 h-5" />
                        CSS Modules
                      </span>
                      <span class="px-4 py-2 bg-green-100 text-green-700 text-base font-medium rounded-full flex items-center gap-2 shadow-sm">
                        <img src="/src/assets/icons/tanstack.png" alt="TanStack" class="w-5 h-5" />
                        TanStack
                      </span>
                      <span class="px-4 py-2 bg-green-100 text-green-700 text-base font-medium rounded-full shadow-sm">Node.js</span>
                      <span class="px-4 py-2 bg-green-100 text-green-700 text-base font-medium rounded-full shadow-sm">Express</span>
                      <span class="px-4 py-2 bg-green-100 text-green-700 text-base font-medium rounded-full shadow-sm">Kubernetes</span>
                      <span class="px-4 py-2 bg-green-100 text-green-700 text-base font-medium rounded-full shadow-sm">CI/CD</span>
                    </div>
                  </div>
                  </div>

                  <!-- Timeline -->
                  <div class="lg:w-32 text-right">
                    <div class="text-lg font-semibold text-gray-900">1 year</div>
                    <div class="text-sm text-gray-500">2025 - Present</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Qonto Experience -->
            <div class="relative mb-16">
              <!-- Content Card -->
              <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border border-gray-200/50 shadow-lg hover:shadow-xl transition-all duration-300">
                <div class="flex flex-col lg:flex-row gap-8 items-start">
                  <!-- Company Info -->
                  <div class="flex-1">
                    <div class="flex items-center gap-4 mb-4">
                      <img src="/src/assets/icons/qonto.jpeg" alt="Qonto" class="w-12 h-12 rounded-full object-cover" />
                      <div>
                        <h3 class="text-2xl font-bold text-gray-900">Frontend Engineer</h3>
                        <p class="text-lg text-gray-600">Qonto</p>
                      </div>
                    </div>

                    <div class="space-y-4">
                      <p class="text-gray-700 leading-relaxed">
                        Development and design of interfaces for the Qonto web application.
                      </p>
                      <p class="text-gray-700 leading-relaxed">
                        Close collaboration between Front-End (iOS, Android, Web) and Back-End teams in the development of new functionalities.
                      </p>

                      <div class="flex flex-wrap gap-3">
                        <span class="px-4 py-2 bg-gray-100 text-gray-700 text-base font-medium rounded-full shadow-sm">Ember</span>
                        <span class="px-4 py-2 bg-gray-100 text-gray-700 text-base font-medium rounded-full shadow-sm">Mirage</span>
                        <span class="px-4 py-2 bg-gray-100 text-gray-700 text-base font-medium rounded-full flex items-center gap-2 shadow-sm">
                          <img src="/src/assets/icons/javascript.svg" alt="JavaScript" class="w-5 h-5" />
                          JavaScript
                        </span>
                        <span class="px-4 py-2 bg-gray-100 text-gray-700 text-base font-medium rounded-full flex items-center gap-2 shadow-sm">
                          <img src="/src/assets/icons/css.svg" alt="CSS Modules" class="w-5 h-5" />
                          CSS Modules
                        </span>
                        <span class="px-4 py-2 bg-gray-100 text-gray-700 text-base font-medium rounded-full shadow-sm">Webpack</span>
                        <span class="px-4 py-2 bg-gray-100 text-gray-700 text-base font-medium rounded-full shadow-sm">QUnit</span>
                        <span class="px-4 py-2 bg-gray-100 text-gray-700 text-base font-medium rounded-full shadow-sm">Gitlab CI/CD</span>
                      </div>
                    </div>
                  </div>

                  <!-- Timeline -->
                  <div class="lg:w-32 text-right">
                    <div class="text-lg font-semibold text-gray-900">1 year</div>
                    <div class="text-sm text-gray-500">2023 - 2024</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Canal Plus Experience (Oldest) -->
            <div class="relative mb-16">
              <!-- Content Card -->
              <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border border-gray-200/50 shadow-lg hover:shadow-xl transition-all duration-300">
                <div class="flex flex-col lg:flex-row gap-8 items-start">
                  <!-- Company Info -->
                  <div class="flex-1">
                    <div class="flex items-center gap-4 mb-4">
                      <img src="/src/assets/icons/canal.jpeg" alt="Canal+" class="w-12 h-12 rounded-full object-cover" />
                      <div>
                        <h3 class="text-2xl font-bold text-gray-900">Frontend Engineer</h3>
                        <p class="text-lg text-gray-600">CANAL+ Group</p>
                      </div>
                    </div>

                    <div class="space-y-4">
                      <p class="text-gray-700 leading-relaxed">
                        Development and design of reactive interfaces for Smart TV applications and continuous improvement of the video player on the myCANAL website.
                      </p>

                      <div class="flex flex-wrap gap-3">
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full flex items-center gap-2 shadow-sm">
                          <img src="/src/assets/icons/react.svg" alt="React" class="w-5 h-5" />
                          React
                        </span>
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full shadow-sm">Redux</span>
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full flex items-center gap-2 shadow-sm">
                          <img src="/src/assets/icons/typescript.svg" alt="TypeScript" class="w-5 h-5" />
                          TypeScript
                        </span>
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full flex items-center gap-2 shadow-sm">
                          <img src="/src/assets/icons/css.svg" alt="SCSS" class="w-5 h-5" />
                          SCSS
                        </span>
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full shadow-sm">Webpack</span>
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full shadow-sm">Rollup</span>
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full shadow-sm">RxJS</span>
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full shadow-sm">Redux-Observable</span>
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full shadow-sm">RxPlayer</span>
                        <span class="px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-full shadow-sm">Nightwatch</span>
                      </div>
                    </div>
                  </div>

                  <!-- Timeline -->
                  <div class="lg:w-32 text-right">
                    <div class="text-lg font-semibold text-gray-900">3 years</div>
                    <div class="text-sm text-gray-500">2020 - 2023</div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </section>

      <Separator />

      <!-- Education Section -->
      <section class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Education</h2>
          <p class="text-gray-600">Academic foundation for computer science and business management</p>
        </div>

        <!-- Education Cards -->
        <div class="relative max-w-4xl mx-auto">
          
          <!-- Education Item -->
          <div class="relative">
            <!-- Content Card -->
            <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border border-gray-200/50 shadow-lg hover:shadow-xl transition-all duration-300">
              <div class="flex flex-col lg:flex-row gap-8 items-start">
                <!-- University Info -->
                <div class="flex-1">
                  <div class="flex items-center gap-4 mb-4">
                    <img src="/src/assets/icons/sorbonne.jpeg" alt="Sorbonne" class="w-12 h-12 rounded-full object-cover" />
                    <div>
                      <h3 class="text-2xl font-bold text-gray-900">Computer Science</h3>
                      <p class="text-lg text-gray-600">Université Paris 1 Panthéon-Sorbonne</p>
                    </div>
                  </div>
                  
                  <div class="space-y-4">
                    <p class="text-gray-700 leading-relaxed">
                      Specialized training in computer methods applied to business management, combining technical expertise and management skills.
                    </p>
                    
                    <div class="flex flex-wrap gap-2">
                      <span class="px-3 py-1 bg-purple-100 text-purple-700 text-sm rounded-full">Computer Science</span>
                      <span class="px-3 py-1 bg-purple-100 text-purple-700 text-sm rounded-full">Business Management</span>
                      <span class="px-3 py-1 bg-purple-100 text-purple-700 text-sm rounded-full">Applied Methods</span>
                      <span class="px-3 py-1 bg-purple-100 text-purple-700 text-sm rounded-full">Management</span>
                    </div>
                  </div>
                </div>
                
                <!-- Timeline -->
                <div class="lg:w-32 text-right">
                  <div class="text-lg font-semibold text-gray-900">3 years</div>
                  <div class="text-sm text-gray-500">2017 - 2020</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

  
    </div>
</Layout>
