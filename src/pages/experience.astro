---
import Layout from '../layouts/Layout.astro';
import Separator from '../components/Separator.astro';
import personalPicture from '../assets/images/personal/picture.jpg';
import decathlonIcon from '../assets/icons/decathlon.jpeg';
import typescriptIcon from '../assets/icons/typescript.svg';
import reactIcon from '../assets/icons/react.svg';
import tanstackIcon from '../assets/icons/tanstack.png';
import nodejsIcon from '../assets/icons/nodejs.svg';
import viteIcon from '../assets/icons/vite.png';
import kubernetesIcon from '../assets/icons/kubernetes.png';
import qontoIcon from '../assets/icons/qonto.jpeg';
import emberIcon from '../assets/icons/ember.png';
import mirageIcon from '../assets/icons/mirage.png';
import javascriptIcon from '../assets/icons/javascript.svg';
import cssIcon from '../assets/icons/css.svg';
import gitlabIcon from '../assets/icons/gitlab.svg';
import canalIcon from '../assets/icons/canal.jpeg';
import reduxIcon from '../assets/icons/redux.svg';
import webpackIcon from '../assets/icons/webpack.png';
import rxjsIcon from '../assets/icons/rxjs.png';
import sorbonneIcon from '../assets/icons/sorbonne.jpeg';
---

<Layout>
    <div class="max-w-6xl mx-auto px-4">

        <!-- Page Title -->
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          <span class="bg-gradient-to-r from-red-500 to-pink-500 bg-clip-text text-transparent">experience</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          My professional journey in product engineering and digital innovation
        </p>
      </div>

      <Separator />

      <!-- Professional Experience Section -->
      <section class="mb-16">
      
        <!-- Experience Cards -->
        <div class="relative max-w-4xl mx-auto space-y-8">
          
          <!-- Decathlon Digital Experience (Most Recent) -->
          <div class="bg-gradient-to-br from-gray-700 to-black rounded-3xl p-8 md:p-12 border border-gray-800/50 shadow-2xl">
            <div class="flex flex-col lg:flex-row gap-8 items-start">
              <!-- Company Info -->
              <div class="flex-1">
                <div class="flex items-center gap-4 mb-6">
                  <img src={decathlonIcon.src} alt="Decathlon" class="w-12 h-12 rounded-full object-cover" />
                  <div>
                    <h3 class="text-2xl font-bold text-white">Senior Frontend Engineer</h3>
                    <p class="text-lg text-gray-300">Decathlon Digital</p>
                  </div>
                </div>

                <div class="space-y-4">
                  <p class="text-gray-300 leading-relaxed">
                    Front-end technical lead for the Platform team in charge of Repair domain applications and Security Champion for integrating good security practices.
                  </p>

                  <div class="flex flex-wrap gap-4">
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-green-800/30 hover:text-green-200 transition-all duration-300">
                      <img src={typescriptIcon.src} alt="TypeScript" class="w-4 h-4" />
                      TypeScript
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-green-800/30 hover:text-green-200 transition-all duration-300">
                      <img src={reactIcon.src} alt="React" class="w-4 h-4" />
                      React
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-green-800/30 hover:text-green-200 transition-all duration-300">
                      <img src={tanstackIcon.src} alt="TanStack" class="w-4 h-4" />
                      TanStack
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-green-800/30 hover:text-green-200 transition-all duration-300">
                      <img src={nodejsIcon.src} alt="Node.js" class="w-4 h-4" />
                      Node.js
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-green-800/30 hover:text-green-200 transition-all duration-300">
                      <img src={viteIcon.src} alt="Vite" class="w-4 h-4" />
                      Vite
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-green-800/30 hover:text-green-200 transition-all duration-300">
                      <img src={kubernetesIcon.src} alt="Kubernetes" class="w-4 h-4" />
                      Kubernetes
                    </span>
                  </div>
                </div>
              </div>

              <!-- Timeline -->
              <div class="lg:w-32 lg:text-right">
                <div class="text-lg font-semibold text-white">2 years</div>
                <div class="text-sm text-gray-400">2024 - Present</div>
              </div>
            </div>
          </div>

          <!-- Qonto Experience -->
          <div class="bg-gradient-to-br from-gray-700 to-black rounded-3xl p-8 md:p-12 border border-gray-800/50 shadow-2xl">
            <div class="flex flex-col lg:flex-row gap-8 items-start">
              <!-- Company Info -->
              <div class="flex-1">
                <div class="flex items-center gap-4 mb-6">
                  <img src={qontoIcon.src} alt="Qonto" class="w-12 h-12 rounded-full object-cover" />
                  <div>
                    <h3 class="text-2xl font-bold text-white">Frontend Engineer</h3>
                    <p class="text-lg text-gray-300">Qonto</p>
                  </div>
                </div>

                <div class="space-y-4">
                  <p class="text-gray-300 leading-relaxed">
                    Engineering for the Qonto web application. Delivering cutting-edge features for spending management and budget planning teams.
                  </p>

                  <div class="flex flex-wrap gap-4">
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-blue-800/30 hover:text-blue-200 transition-all duration-300">
                      <img src={emberIcon.src} alt="Ember" class="w-4 h-4" />
                      Ember
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-blue-800/30 hover:text-blue-200 transition-all duration-300">
                      <img src={mirageIcon.src} alt="Mirage" class="w-4 h-4" />
                      Mirage
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-blue-800/30 hover:text-blue-200 transition-all duration-300">
                      <img src={javascriptIcon.src} alt="JavaScript" class="w-4 h-4" />
                      JavaScript
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-blue-800/30 hover:text-blue-200 transition-all duration-300">
                      <img src={cssIcon.src} alt="CSS Modules" class="w-4 h-4" />
                      CSS Modules
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-blue-800/30 hover:text-blue-200 transition-all duration-300">
                      <img src={gitlabIcon.src} alt="GitLab CI/CD" class="w-4 h-4" />
                      GitLab CI/CD
                    </span>
                  </div>
                </div>
              </div>

              <!-- Timeline -->
              <div class="lg:w-32 lg:text-right">
                <div class="text-lg font-semibold text-white">1 year</div>
                <div class="text-sm text-gray-400">2023 - 2024</div>
              </div>
            </div>
          </div>

          <!-- Canal Plus Experience (Oldest) -->
          <div class="bg-gradient-to-br from-gray-700 to-black rounded-3xl p-8 md:p-12 border border-gray-800/50 shadow-2xl">
            <div class="flex flex-col lg:flex-row gap-8 items-start">
              <!-- Company Info -->
              <div class="flex-1">
                <div class="flex items-center gap-4 mb-6">
                  <img src={canalIcon.src} alt="Canal+" class="w-12 h-12 rounded-full object-cover" />
                  <div>
                    <h3 class="text-2xl font-bold text-white">Frontend Engineer</h3>
                    <p class="text-lg text-gray-300">CANAL+ Group</p>
                  </div>
                </div>

                <div class="space-y-4">
                  <p class="text-gray-300 leading-relaxed">
                    Development and design of reactive interfaces for Smart TV applications and continuous improvement of the video player on the myCANAL website.
                  </p>

                  <div class="flex flex-wrap gap-4">
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-red-800/30 hover:text-red-200 transition-all duration-300">
                      <img src={reactIcon.src} alt="React" class="w-4 h-4" />
                      React
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-red-800/30 hover:text-red-200 transition-all duration-300">
                      <img src={reduxIcon.src} alt="Redux" class="w-4 h-4" />
                      Redux
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-red-800/30 hover:text-red-200 transition-all duration-300">
                      <img src={typescriptIcon.src} alt="TypeScript" class="w-4 h-4" />
                      TypeScript
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-red-800/30 hover:text-red-200 transition-all duration-300">
                      <img src={cssIcon.src} alt="SCSS" class="w-4 h-4" />
                      SCSS
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-red-800/30 hover:text-red-200 transition-all duration-300">
                      <img src={webpackIcon.src} alt="Webpack" class="w-4 h-4" />
                      Webpack
                    </span>
                    <span class="py-1 bg-gray-800/50 text-gray-300 text-sm rounded-full flex items-center gap-2 hover:bg-red-800/30 hover:text-red-200 transition-all duration-300">
                      <img src={rxjsIcon.src} alt="RxJS" class="w-4 h-4" />
                      RxJS
                    </span>
                  </div>
                </div>
              </div>

              <!-- Timeline -->
              <div class="lg:w-32 lg:text-right">
                <div class="text-lg font-semibold text-white">3 years</div>
                <div class="text-sm text-gray-400">2020 - 2023</div>
              </div>
            </div>
          </div>

        </div>
      </section>

      <Separator />

      <!-- Education Section -->
      <section class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Education</h2>
          <p class="text-gray-600">Academic foundation for computer science and business management</p>
        </div>
        

        <!-- Education Cards -->
        <div class="relative max-w-4xl mx-auto">
          
          <!-- Education Item -->
          <div class="bg-gradient-to-br from-gray-700 to-black rounded-3xl p-8 md:p-12 border border-gray-800/50 shadow-2xl">
            <div class="flex flex-col lg:flex-row gap-8 items-start">
              <!-- University Info -->
              <div class="flex-1">
                <div class="flex items-center gap-4 mb-6">
                  <img src={sorbonneIcon.src} alt="Sorbonne" class="w-12 h-12 rounded-full object-cover" />
                  <div>
                    <h3 class="text-2xl font-bold text-white">Computer Science (MIAGE)</h3>
                    <p class="text-lg text-gray-300">Université Paris 1 Panthéon-Sorbonne</p>
                  </div>
                </div>
                
                  <div class="space-y-4">
                  <p class="text-gray-300 leading-relaxed">
                    Specialized training in computer sciences and applied methods to business, combining technical expertise and business management skills.
                  </p>
                </div>
              </div>
               <!-- Timeline -->
              <div class="lg:w-32 lg:text-right">
                <div class="text-lg font-semibold text-white">3 years</div>
                <div class="text-sm text-gray-400">2017 - 2020</div>
              </div>
            </div>
            
            </div>
          </div>
        </div>
      </section>

  
    </div>
</Layout>
